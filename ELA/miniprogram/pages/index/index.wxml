<!--pages/index/index.wxml-->
<view class="ela-content">
  <view>
    <van-search v-model="value" placeholder="请输入搜索关键词" shape="round"></van-search>
  </view>
  <!-- 轮播图开始 -->
  <view class="index-swiper">
    <swiper indicator-dots autoplay circular>
      <swiper-item
      wx:for="{{swiperList}}"
      wx:key="hsh"
      >
        <image mode="widthFix" src="https://cn.bing.com{{item.url}}" ></image>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图结束 -->
  <view>当前学习任务/上次学到</view>
  <view class="ela-card">
    <text class="justify-content-text" bindtap="selectBook">六级词汇</text>
  </view>
  <!-- 进度条开始 -->
  <view>
    <progress percent="60" show-info color="#1296db"></progress>
  </view>
  <!-- 进度条结束 -->
  <view>
    <button plain="true">继续学习</button>
  </view>
</view>