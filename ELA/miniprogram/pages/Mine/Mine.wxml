<!--pages/mine/mine.wxml-->
<view class="ela-content">
  <view class="ela-card">
    <view class="album">
        <l-avatar size='200'  src="https://c-ssl.duitang.com/uploads/item/201905/17/20190517211730_kurtr.jpg" />
        <view class="name-card">
          <view class="name">小新</view>
          <view class="justify-content-text">户龄：250天</view>
        </view>
    </view>
  </view>
  <view class="ela-card">
    <text class="justify-content-text">打卡</text>
    <view class="learn-time">
      <van-icon size="30px" name="completed"></van-icon>
      <text>累计打卡：233天</text>
    </view>
  </view>
  <view class="ela-card">
    <text class="text1">您的坚持超过了:</text>
    <text class="user">78%的用户</text>
  </view>
  <text class="justify-content-text">考试倒计时</text>
  <text>考试日期估计</text>
  <view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view class="picker">
        <van-cell title="记忆模式" is-link>{{array[index]}}</van-cell>
      </view>
    </picker>
  </view>
  <view>大约还剩100天（根据往年日期估算）</view>
  <view>准确倒计时</view>
  <view class="ela-card">
    <view>输入您的考试日期：</view>
    <view class="section">
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
        <view class="time-card">
          <van-icon name="calender-o"></van-icon>
          <text class="picker">{{date}}</text>
        </view>
        <text>距离考试开始还有：</text>
        <text class="ddl">30天</text>
      </picker>
    </view>
  </view>
  <view class="ela-card">我的收藏列表</view>
  <view class="ela-card">我的查询记录</view>
  <view class="ela-card">问题反馈和建议</view>
</view>
