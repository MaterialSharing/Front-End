/* pages/mine/mine.wxss */
.head{
  height: 400rpx;
  background-color: #1296db;
}

.logout{
  font-size: 30rpx;
  color: yellow;
  margin-top: 20rpx;
}

.avatar-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.nickname{
  font-weight: 900;
}

/* css右箭头 */
.right-arrow{
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15rpx;
  /* margin-left: 66%; */
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.item{
  display: flex;
  padding: 20rpx;
  background-color: white;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}

/* 去除按钮边框 */
.button{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}

/* 去除按钮边框 */
.button::after{
  border: none;
  border-radius: 0;
}

.learn-time{
  text-align: center;
}

.ela-card{
  text-align: center;
  border-style: solid;
  border-width: 2rpx;
  padding: 30rpx;
  margin: 30rpx 100rpx;
  border-radius: 50rpx;
}

.name-card{
  text-align: center;
  font-size: 30rpx;
  border-style: solid;
  border-width: 2rpx;
  padding: 30rpx;
  margin: 30rpx 20rpx;
  border-radius: 30rpx;
}

.name{
  font-size: 50rpx;
}

.justify-content-text{
  display: flex;
  justify-content: center;
}

.album {
  display: flex;
  flex-direction: row;
}

.content {
  margin-top: 7rpx;
  margin-right: 10rpx;
  color: black;
  font-weight: 445;
  margin-bottom: 15rpx;
}

.text1{
  font-size: 30rpx;
}

.user{
  color: #1296db;
  font-size: 40rpx;
}

.outline{
  border-style: solid;
  border-width: 2rpx;
  padding: 30rpx;
  margin: 30rpx 100rpx;
  border-radius: 100rpx;
}

.time-card{
  border-color: #1296db;
  border-style: solid;
  border-width: 2rpx;
  text-align: center;
}

.picker{
  font-size: 30rpx;
}

.ddl{
  font-size: 50rpx;
  color: red;
}